    "inquirer": "^9.3.8"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^24.9.1",
    "axios-mock-adapter": "^2.1.0",
    "jest": "^30.2.0",
