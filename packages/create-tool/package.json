{
  "name": "@nodeangularfullstack/create-tool",
  "version": "1.0.0",
  "description": "CLI tool to scaffold new tools for NodeAngularFullStack platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "create-tool": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
