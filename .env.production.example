# Production Environment Configuration
# SECURITY: Change all default values for production deployment
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com

# Database (Production)
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=nodeangularfullstack_prod
DB_USER=your_production_db_user
DB_PASSWORD=your_production_db_password
DB_SSL=true

# JWT Authentication (Production - MUST CHANGE)
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-SECRET-AT-LEAST-64-CHARACTERS-LONG
JWT_REFRESH_SECRET=CHANGE-THIS-TO-A-DIFFERENT-SECURE-SECRET-AT-LEAST-64-CHARACTERS-LONG
JWT_ACCESS_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d 30m

# Redis Cache (Production)
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password
REDIS_DB=0

# File Storage (Production)
DO_SPACES_ENDPOINT=https://your-region.digitaloceanspaces.com
DO_SPACES_KEY=your-production-spaces-key
DO_SPACES_SECRET=your-production-spaces-secret
DO_SPACES_BUCKET=your-production-bucket
DO_SPACES_REGION=your-region

# Email Service (Production)
SENDGRID_API_KEY=your-production-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Your App Name

# Monitoring (Production - Recommended)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOGTAIL_TOKEN=your-production-logtail-token

# Rate Limiting (Production - Restrictive)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (Production)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Keys (Production)
API_KEY=your-production-api-key

# Multi-tenancy Configuration (Production - Choose your deployment model)

## Option 1: Single-Tenant Production Deployment
# ENABLE_MULTI_TENANCY=false
# DEFAULT_TENANT_ID=your-company-name

## Option 2: Multi-Tenant Production Deployment
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT_ID=system

# Tenant Isolation Settings (Production Multi-Tenant)
TENANT_ISOLATION_LEVEL=row
TENANT_RLS_ENABLED=true
TENANT_CROSS_ACCESS_PREVENTION=true

# Tenant Security Settings (Production - High Security)
TENANT_AUDIT_LOGGING=true
TENANT_TOKEN_ISOLATION=true
TENANT_DATA_ENCRYPTION=true
TENANT_REQUIRE_VERIFICATION=true

# Tenant Defaults (Production)
TENANT_DEFAULT_PLAN=free
TENANT_MAX_USERS_DEFAULT=5
TENANT_FEATURES_DEFAULT={"api_access":true,"file_storage":true,"email_notifications":true}

# pgWeb Database Management (Production - SECURE THIS)
PGWEB_AUTH_USER=admin
PGWEB_AUTH_PASS=CHANGE-THIS-TO-A-SECURE-PASSWORD-WITH-SPECIAL-CHARS!
PGWEB_READ_ONLY=true
PGWEB_SESSIONS=true
PGWEB_CORS_ORIGIN=https://yourdomain.com
PGWEB_DATABASE_URL=postgresql://your_production_db_user:your_production_db_password@your-production-db-host:5432/nodeangularfullstack_prod?sslmode=require

# Configuration Hash (Generated automatically - Do not set manually)
# CONFIG_HASH=auto-generated-on-startup