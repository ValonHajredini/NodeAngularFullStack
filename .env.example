# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nodeangularfullstack
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_SSL=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Storage (DO Spaces / S3-compatible)
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_KEY=your-spaces-key
DO_SPACES_SECRET=your-spaces-secret
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_REGION=nyc3

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=NodeAngularFullStack

# Monitoring
SENTRY_DSN=your-sentry-dsn-if-using-sentry
LOGTAIL_TOKEN=your-logtail-token-if-using-logtail

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# API Keys
API_KEY=your-api-key-for-external-services

# Multi-tenancy (optional)
ENABLE_MULTI_TENANCY=false
DEFAULT_TENANT_ID=default

# pgWeb Database Management
# SECURITY: Change these credentials for production use
PGWEB_AUTH_USER=admin
PGWEB_AUTH_PASS=change-this-password-in-production
PGWEB_READ_ONLY=false
PGWEB_SESSIONS=true
PGWEB_CORS_ORIGIN=http://localhost:4200
PGWEB_DATABASE_URL=postgresql://your_db_user:your_db_password@postgres:5432/nodeangularfullstack?sslmode=disable