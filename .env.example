# Application
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:4200

# Database Configuration
# PostgreSQL connection settings for node-postgres (pg) with connection pooling
DB_HOST=localhost                        # PostgreSQL host address
DB_PORT=5432                            # PostgreSQL port (default: 5432)
DB_NAME=nodeangularfullstack            # Database name
DB_USER=your_db_user                    # Database user with CRUD permissions
DB_PASSWORD=your_db_password            # Database password (use strong password in production)
DB_SSL=false                            # Enable SSL/TLS for database connections (recommended for production)

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=8d

# Form Builder
FORM_RENDER_TOKEN_SECRET=your-form-render-token-secret-change-in-production

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Storage (DO Spaces / S3-compatible)
DO_SPACES_ENDPOINT=https://lon1.digitaloceanspaces.com
DO_SPACES_KEY=DO00LZ22KQG9RLBMBNFE
DO_SPACES_SECRET=pwyJ8Xt+eUJTbJFLwDQxdVJr8KKWbJML6PdlP0n6ir8
DO_SPACES_BUCKET=my-pdfs
DO_SPACES_REGION=lon1

# Email Service (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=NodeAngularFullStack

# Monitoring
SENTRY_DSN=your-sentry-dsn-if-using-sentry
LOGTAIL_TOKEN=your-logtail-token-if-using-logtail

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:4200,http://localhost:3000

# API Keys
API_KEY=your-api-key-for-external-services

# Multi-tenancy Configuration
ENABLE_MULTI_TENANCY=false
DEFAULT_TENANT_ID=default

# Tenant Isolation Settings
TENANT_ISOLATION_LEVEL=row
TENANT_RLS_ENABLED=false
TENANT_CROSS_ACCESS_PREVENTION=false

# Tenant Security Settings
TENANT_AUDIT_LOGGING=false
TENANT_TOKEN_ISOLATION=false
TENANT_DATA_ENCRYPTION=false
TENANT_REQUIRE_VERIFICATION=true

# Tenant Defaults (used when multi-tenancy is enabled)
TENANT_DEFAULT_PLAN=free
TENANT_MAX_USERS_DEFAULT=5
TENANT_FEATURES_DEFAULT={}

# pgWeb Database Management
# SECURITY: Change these credentials for production use
PGWEB_AUTH_USER=admin
PGWEB_AUTH_PASS=change-this-password-in-production
PGWEB_READ_ONLY=false
PGWEB_SESSIONS=true
PGWEB_CORS_ORIGIN=http://localhost:4200
PGWEB_DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/nodeangularfullstack?sslmode=disable
