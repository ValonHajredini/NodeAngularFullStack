{
  "name": "nodeangularfullstack-examples-tests",
  "version": "1.0.0",
  "description": "Test suite for NodeAngularFullStack examples and tutorials",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:unit": "jest unit/",
    "test:integration": "jest integration/",
    "test:e2e": "jest e2e/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "validate": "npm run test:unit && npm run test:integration"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "transform": {},
    "collectCoverageFrom": [
      "../tutorials/**/*.js",
      "../common-patterns/**/*.js",
      "../../scripts/*-collector.js"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "testTimeout": 30000
  }
}
