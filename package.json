{
  "name": "nodeangularfullstack",
  "version": "1.0.0",
  "description": "Full-stack application with Angular frontend and Express backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "start": "./start-dev.sh",
    "stop": "./stop-dev.sh",
    "dev": "./start-dev.sh",
    "dev:api": "npm --workspace=apps/api run dev",
    "dev:web": "npm --workspace=apps/web run dev",
    "pgweb": "./start-pgweb.sh",
    "pgweb:start": "./start-pgweb.sh",
    "build": "npm run build:shared && npm run build:api && npm run build:web",
    "build:shared": "npm --workspace=packages/shared run build",
    "build:api": "npm --workspace=apps/api run build",
    "build:web": "npm --workspace=apps/web run build",
    "test": "npm run test:api && npm run test:web",
    "test:api": "npm --workspace=apps/api run test",
    "test:web": "npm --workspace=apps/web run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "lint": "npm run lint:api && npm run lint:web",
    "lint:api": "npm --workspace=apps/api run lint",
    "lint:web": "npm --workspace=apps/web run lint",
    "format": "prettier --write \"**/*.{ts,js,json,html,scss,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,html,scss,css,md}\"",
    "typecheck": "npm run typecheck:api && npm run typecheck:web",
    "typecheck:api": "npm --workspace=apps/api run typecheck",
    "typecheck:web": "npm --workspace=apps/web run typecheck",
    "security:audit": "node scripts/security-audit.js",
    "quality:check": "npm run lint && npm run typecheck && npm run format:check",
    "metrics:init": "node scripts/metrics-collector.js init",
    "metrics:dashboard": "node scripts/metrics-collector.js dashboard",
    "metrics:export": "node scripts/metrics-collector.js export",
    "feedback:init": "node scripts/feedback-collector.js init",
    "feedback:collect": "node scripts/feedback-collector.js collect",
    "feedback:quick": "node scripts/feedback-collector.js quick",
    "feedback:dashboard": "node scripts/feedback-collector.js dashboard",
    "onboarding:setup": "npm run metrics:init && npm run feedback:init && node examples/tutorials/first-feature/validation.js",
    "onboarding:help": "echo 'Visit examples/tutorials/first-feature/README.md to get started!'",
    "prepare": "husky"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,js}": [
      "cd apps/api && npx eslint --fix",
      "prettier --write"
    ],
    "apps/web/**/*.{ts,js}": [
      "cd apps/web && npx eslint --fix",
      "prettier --write"
    ],
    "*.{json,html,scss,css,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^20.11.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
