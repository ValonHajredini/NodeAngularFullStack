# Docker Environment Configuration
# Copy this file to .env.docker.local and customize for your environment
# WARNING: Never commit .env.docker.local to version control

# Node Environment
NODE_ENV=production

# Database Configuration
POSTGRES_DB=nodeangularfullstack
POSTGRES_USER=dbuser
POSTGRES_PASSWORD=dbpassword
POSTGRES_PORT=5432

# API Configuration
API_PORT=3000

# Frontend Configuration
WEB_PORT=80

# pgWeb Configuration (optional database UI)
PGWEB_PORT=8080

# JWT Configuration
# IMPORTANT: Change these secrets in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:4200,http://localhost

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
