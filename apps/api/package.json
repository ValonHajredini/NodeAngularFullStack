{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:performance": "jest --selectProjects performance",
    "test:security": "jest tests/integration/security-comprehensive.test.ts",
    "test:auth": "jest tests/integration/auth-comprehensive.test.ts",
    "test:crud": "jest tests/integration/users-crud-comprehensive.test.ts",
    "test:validation": "jest tests/integration/api-validation.test.ts",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --passWithNoTests",
    "test:report": "jest --coverage --coverageReporters=html --coverageReporters=json-summary",
    "test:benchmark": "jest tests/performance/performance-comprehensive.test.ts --verbose",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "db:setup": "ts-node database/setup.ts",
    "db:migrate": "ts-node -e \"import('./src/utils/migration.utils').then(m => m.MigrationUtils.setupDatabase())\"",
    "db:seed": "ts-node -e \"import('./src/utils/seed.utils').then(s => s.SeedUtils.seedDatabase())\"",
    "db:reset": "ts-node -e \"import('./src/utils/seed.utils').then(s => s.SeedUtils.clearTestData()).then(() => import('./src/utils/seed.utils').then(s => s.SeedUtils.seedDatabase()))\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.5.2",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "joi": "^18.0.1",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "@logtail/node": "^0.5.6",
    "@logtail/winston": "^0.5.6",
    "@sentry/node": "^10.12.0",
    "@sentry/profiling-node": "^10.12.0",
    "@types/pg": "^8.15.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-slow-down": "^3.0.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  }
}
