# Node.js Environment
NODE_ENV=development
PORT=3000

# Frontend Configuration
FRONTEND_URL=http://localhost:4200

# Database Configuration
DATABASE_URL=postgresql://dbuser:dbpassword@localhost:5432/nodeangularfullstack

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Multi-tenancy (optional)
ENABLE_MULTI_TENANCY=false

# DigitalOcean Spaces Configuration
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_KEY=your-digitalocean-spaces-access-key-id
DO_SPACES_SECRET=your-digitalocean-spaces-secret-access-key
DO_SPACES_BUCKET=your-bucket-name

# Production specific (only needed in production)
# DATABASE_SSL=true
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=info
