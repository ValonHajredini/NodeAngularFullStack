# Production Environment Configuration - Forms API
# Domain: forms-api.legopdf.com
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://form-ui.legopdf.com

# Database (Production) - REPLACE WITH YOUR PRODUCTION DATABASE CREDENTIALS
DB_HOST=your-production-db-host
DB_PORT=5432
DB_NAME=nodeangularfullstack_production
DB_USER=your-production-db-user
DB_PASSWORD=your-production-db-password
DB_SSL=true

# Multi-Database Configuration
AUTH_DB_NAME=nodeangularfullstack_auth_production
FORMS_DB_NAME=nodeangularfullstack_forms_production

# JWT Authentication (Production) - REPLACE WITH STRONG RANDOM SECRETS
# Generate with: openssl rand -base64 32
JWT_SECRET=REPLACE-WITH-STRONG-JWT-SECRET-AT-LEAST-32-CHARACTERS-LONG
JWT_REFRESH_SECRET=REPLACE-WITH-STRONG-REFRESH-SECRET-AT-LEAST-32-CHARACTERS-LONG
JWT_ACCESS_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=8d

# Form Render Token (Production) - REPLACE WITH STRONG RANDOM SECRET
FORM_RENDER_TOKEN_SECRET=REPLACE-WITH-STRONG-FORM-RENDER-TOKEN-SECRET-AT-LEAST-32-CHARACTERS-LONG

# Redis Cache (Production) - REPLACE WITH YOUR REDIS CREDENTIALS
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-production-redis-password
REDIS_DB=0

# File Storage (Production) - Digital Ocean Spaces
# REPLACE WITH YOUR PRODUCTION CREDENTIALS
DO_SPACES_ENDPOINT=https://lon1.digitaloceanspaces.com
DO_SPACES_KEY=your-production-spaces-key
DO_SPACES_SECRET=your-production-spaces-secret
DO_SPACES_BUCKET=legopdf-production
DO_SPACES_REGION=lon1

# Email Service (Production) - SendGrid
# REPLACE WITH YOUR PRODUCTION SENDGRID API KEY
SENDGRID_API_KEY=your-production-sendgrid-api-key
EMAIL_FROM=noreply@legopdf.com
EMAIL_FROM_NAME="LegoPDF"

# Monitoring (Production) - REPLACE WITH YOUR MONITORING CREDENTIALS
SENTRY_DSN=your-production-sentry-dsn
LOGTAIL_TOKEN=your-production-logtail-token

# Rate Limiting (Production) - More restrictive for security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (Production) - Only allow production domains
CORS_ORIGINS=https://demopdf.com,https://form-ui.legopdf.com,https://api.legopdf.com

# API Keys (Production) - REPLACE WITH STRONG RANDOM KEY
API_KEY=REPLACE-WITH-STRONG-API-KEY

# Multi-tenancy Configuration (Production)
ENABLE_MULTI_TENANCY=true
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000000

# Tenant Isolation Settings (Production - Enhanced Security)
TENANT_ISOLATION_LEVEL=row
TENANT_RLS_ENABLED=true
TENANT_CROSS_ACCESS_PREVENTION=true

# Tenant Security Settings (Production - Full Security)
TENANT_AUDIT_LOGGING=true
TENANT_TOKEN_ISOLATION=true
TENANT_DATA_ENCRYPTION=true
TENANT_REQUIRE_VERIFICATION=true

# Tenant Defaults
TENANT_DEFAULT_PLAN=free
TENANT_MAX_USERS_DEFAULT=10
TENANT_FEATURES_DEFAULT={}

# pgWeb Database Management (Production - DISABLED)
# DO NOT EXPOSE pgWeb IN PRODUCTION
PGWEB_AUTH_USER=
PGWEB_AUTH_PASS=
PGWEB_READ_ONLY=true
PGWEB_SESSIONS=false

# Internal Service Communication (Production) - REPLACE WITH STRONG TOKEN
INTERNAL_SERVICE_TOKEN=REPLACE-WITH-STRONG-INTERNAL-SERVICE-TOKEN-98765432

# SSL/TLS Configuration (Production)
FORCE_HTTPS=true
TRUST_PROXY=true

# Session Security (Production)
SESSION_SECURE=true
SESSION_SAME_SITE=strict
